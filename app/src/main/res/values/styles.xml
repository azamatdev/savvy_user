<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TextStyles -->
    <style name="TitleSemiBoldWhite" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sans_semibold</item>
    </style>

    <style name="TitleTopicBold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sans_semibold</item>
    </style>

    <style name="TitleTopicLessonNumber" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/textGreyColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sans_semibold</item>
    </style>

    <style name="TitleTopicsHeader" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/textIndigoColor</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/sans_semibold</item>
    </style>

    <style name="TextChoice" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sans_regular</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SettingsText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/greyMain</item>
        <item name="fontFamily">@font/sans_semibold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="Widget.Savvy.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="fontFamily">@font/sans_semibold</item>
        <item name="titleTextStyle">@style/SettingsText</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sans_semibold</item>
    </style>


</resources>
